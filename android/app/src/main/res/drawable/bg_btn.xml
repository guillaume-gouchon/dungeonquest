<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/main_btn_radius" />
            <solid android:color="@color/bg_btn_disabled" />
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <stroke android:width="@dimen/main_btn_stroke_width_pressed" android:color="@color/grey" />

            <corners android:radius="@dimen/main_btn_radius" />

            <solid android:color="@color/bg_btn_edge_pressed" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/main_btn_radius" />

            <gradient android:endColor="@color/bg_btn_edge" android:gradientRadius="180" android:startColor="@color/bg_btn_center" android:type="radial" />
        </shape>
    </item>

</selector>