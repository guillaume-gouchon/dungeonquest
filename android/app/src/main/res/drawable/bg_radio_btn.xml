<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <stroke android:width="2dp" android:color="@color/grey" />

            <corners android:radius="2dp" />

            <solid android:color="@color/bg_btn_edge_pressed" />
        </shape>
    </item>
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <stroke android:width="2dp" android:color="@color/white" />

            <corners android:radius="2dp" />

            <solid android:color="@color/bg_btn_edge_pressed" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <stroke android:width="0dp" android:color="@color/bg_btn_center_pressed" />

            <corners android:radius="2dp" />

            <gradient android:endColor="@color/bg_btn_edge" android:gradientRadius="120" android:startColor="@color/bg_btn_center" android:type="radial" />
        </shape>
    </item>

</selector>