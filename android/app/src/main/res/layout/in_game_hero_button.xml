<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="3dp"
    android:background="@drawable/bg_clickable_gui">

    <com.glevel.dungeonhero.views.LifeBar
        android:id="@+id/life"
        android:layout_width="@dimen/in_game_button_size"
        android:layout_height="@dimen/in_game_button_size"
        android:rotation="90"
        android:alpha="0.6"
        custom:lifeColor="@color/darkGreen" />

    <ImageView
        android:layout_width="@dimen/in_game_button_size"
        android:layout_height="@dimen/in_game_button_size"
        android:scaleType="centerInside"
        android:src="@drawable/bg_hero_details"
        android:alpha="0.6"
        android:padding="3dp" />

</RelativeLayout>